{{#if errors}}
<div class="error">
    {{#each errors}}
    <p>{{this}}</p>
    {{/each }}
</div>
{{/if}}
<form method="post" enctype="multipart/form-data">
    <h3>Here you can add game</h3>
    <label {{#if errors.name}}class="errorLabel" {{/if}}>Name</label>
    <input {{#if errors.name}}class="errorField" {{/if}} type="text" name="name" value="{{game.name}}">
    <label {{#if errors.category}}class="errorLabel" {{/if}}>Category</label>
    <input {{#if errors.category}}class="errorField" {{/if}} type="text" name="category" value="{{game.category}}">
    <label {{#if errors.year}}class="errorLabel" {{/if}}>Year</label>
    <input {{#if errors.year}}class="errorField" {{/if}} type="number" name="year" value="{{game.year}}">
    <label>Image</label>
    <div class="upload-wrapper">
        <button type="button" id="file-upload-button">Upload</button>
        <input type="file" name="image" class="upload" id="file-upload">
        <span id="file-upload-text">Choose image</span>
    </div>
    <label {{#if errors.creator}}class="errorLabel" {{/if}}>Creator</label>
    <input {{#if errors.creator}}class="errorField" {{/if}} type="text" name="creator" value="{{game.creator}}">
    <label {{#if errors.description}}class="errorLabel" {{/if}}>Description</label>
    <textarea {{#if errors.description}}class="errorField" {{/if}} name="description">{{game.description}}</textarea>
    <button type="submit">Create</button>
</form>